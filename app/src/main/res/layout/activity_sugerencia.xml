<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:layout_width="match_parent"
    android:id="@+id/layoutSugerencia"
    android:weightSum="1">

<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sugerencia"
        android:id="@+id/rbtnSugerencia"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:onClick="onRadioButtonClicked"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:id="@+id/spaceSugerencia" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Felicitacion"
        android:id="@+id/rbtnFelicitacion"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:onClick="onRadioButtonClicked"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:id="@+id/spaceFelicitacion" />
</RadioGroup>

    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Ingrese Sugerencia/Felicitaciones"
        android:id="@+id/textSugerencia"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:id="@+id/spaceMensaje" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_weight="0.57" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:id="@+id/spaceSalto" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/btnEnviar"
        android:layout_gravity="right" />
</LinearLayout>