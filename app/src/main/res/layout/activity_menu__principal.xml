        android:layout_height="wrap_content"
        android:id="@+id/logoMenu"
        android:src="@drawable/logomuni" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="15dp"
        android:id="@+id/spaceMenu1" />

    <Button
        android:id="@+id/btnSugerencia"
        android:text="Sugerencia/Felicitaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="15dp"
        android:id="@+id/spaceMenu2" />

    <Button
        android:id="@+id/btnReclamo"
        android:text="Reclamo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="15dp"
        android:id="@+id/spaceMenu3" />

    <Button
        android:id="@+id/btnInfo"
        android:text="InformaciÃ³n del Servicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="15dp"
        android:id="@+id/spaceMenu4" />

    <Button
        android:id="@+id/btnAyuda"
        android:text="Ayuda/Video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
