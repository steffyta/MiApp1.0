<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:id="@+id/layoutRegistro"
    android:weightSum="1">
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="15dp"
        android:id="@+id/spaceRegistro" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logoMenu"
        android:src="@drawable/logomuni" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="15dp"
        android:id="@+id/spaceRegistro1" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Nombres: "
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/us_Nombres" android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:hint="Ej: Juan Carlos"
        android:layout_height="wrap_content"
        android:inputType="text"
        />

    <TextView
        android:layout_width="wrap_content"
        android:text="Apellidos: "
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/us_Apellidos"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:hint="Ej:Campos PÃ©rez"
        android:layout_height="wrap_content"
        android:inputType="text"
        />

    <TextView
        android:layout_width="wrap_content"
        android:text="R.U.T: "
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/us_Rut"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:hint="12345678-9"
        android:layout_height="wrap_content"
        android:inputType="text"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="15dp"
        android:id="@+id/spaceMenu3" />

    <Button
        android:id="@+id/us_Login"
        android:text="Registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>