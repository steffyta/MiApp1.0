<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:layout_width="match_parent"
    android:id="@+id/layoutTipo_Reclamo"
    android:weightSum="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de Reclamo: "
        android:id="@+id/textReclamo"
        android:layout_gravity="left"
        android:textSize="20sp"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="15dp"
        android:id="@+id/spaceReclamo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escriba su reclamo a continuaciÃ³n: "
        android:id="@+id/textEscriba"
        android:layout_gravity="left"
        android:textSize="20sp"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="15dp"
        android:id="@+id/spaceReclamo2" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:hint="Mensaje" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="15dp"
        android:id="@+id/spaceSalto" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnCamara"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:drawableBottom="@android:drawable/ic_menu_camera"
                android:layout_gravity="center"
                android:layout_column="1" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:id="@+id/viewFoto"
                android:src="@android:drawable/btn_star_big_off"
                android:layout_weight="0.14"
                android:layout_gravity="center"
                android:layout_column="2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:text="Enviar"
                android:id="@+id/btnEnviar"
                android:layout_gravity="center"
                android:layout_column="3" />


        </TableRow>

    </TableLayout>


</LinearLayout>